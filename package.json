{
  "name": "@wanglihua/lulu",
  "version": "0.0.3",
  "description": "utils",
  "main": "lib/index.js",
  "module": "es6/index.js",
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "doc": "typedoc",
    "test": "jest",
    "clean": "rimraf ./dist",
    "lint": "eslint src/** tests/** scripts/**",
    "lint:fix": "npm run prettier:fix && npm run lint --fix",
    "prettier": "prettier --list-different \"./{src,tests,scripts}/**/*.ts\"",
    "prettier:fix": "prettier --write \"./{src,tests,scripts}/**/*.ts\"",
    "test:watch": "jest --watch",
    "prebuild": "npm run clean",
    "build": "tsc -p ./tsconfig.build.json && tsc -p ./tsconfig.build-es6.json && esno scripts/build",
    "postbuild": "prettier --loglevel=silent --write \"./dist/**/*.ts\"",
    "release": "standard-version",
    "publish": "npm run build && esno scripts/publish",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "keywords": [
    "typescript",
    "utils"
  ],
  "homepage": "https://github.com/qluwlh/lulu",
  "repository": {
    "type": "git",
    "url": "https://github.com/qluwlh/lulu.git"
  },
  "author": "lihua <lihua.only@gamil.com>",
  "bugs": {
    "url": "https://github.com/qluwlh/lulu/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.3",
    "@types/node": "14",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.0",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^28.0.5",
    "typedoc": "^0.22.18",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.ts": "npm run lint:fix"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
